<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.MainController">
    <children>
        <VBox spacing="10.0" alignment="CENTER" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <Label fx:id="helloLabel" text="Hello, JavaFX + FXML!" />
            <Button text="Click Me!" onAction="#onHelloButtonClick"/>
        </VBox>
    </children>
</AnchorPane>
